{% extends "light.twig" %}

{% block title %}: {{ vocab.shortName }}: {{ label }}{% endblock %}

{% block sidebar %}
<div class="sidebar-buttons">
  <ul class="nav nav-tabs">
    <li id="alpha"><a href="{{ request.vocabid }}/{{ request.lang }}/index">{% trans "Alpha-nav" %}</a></li>
    {% if vocab.showHierarchy %}
    <li id="hierarchy"><a href="#" id="hier-trigger">{% trans "Hier-nav" %}</a></li>
    {% endif %}
    {% if vocab.groupClassURI %}
    <li id="groups" class="active"><a href="{{ request.vocabid }}/{{ request.lang }}/groups">{% trans "Group-nav" %}</a></li>
    {% else %}
    {% endif %}
  </ul>
</div>

<div class="sidebar-grey">
  <div class="group-hierarchy">
  </div>
</div>
{% endblock %}

{% block content %}
  {% include "concept-shared.twig" %}
{% endblock %}
