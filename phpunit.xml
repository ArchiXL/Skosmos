<phpunit bootstrap="tests/bootstrap.php">
  <logging>
    <log type="coverage-html" target="./report" charset="UTF-8" highlight="false" lowUpperBound="35" highLowerBound="70"/>  
    <log type="coverage-clover" target="build/logs/clover.xml"/>
  </logging>
  <testsuites>
    <testsuite name="tests">
      <file>tests/ModelTest.php</file>
      <file>tests/VocabularyTest.php</file>
      <file>tests/BreadcrumbTest.php</file>
      <file>tests/DataObjectTest.php</file>
      <file>tests/ConceptTest.php</file>
      <file>tests/ConceptPropertyTest.php</file>
      <file>tests/GenericSparqlTest.php</file>
    </testsuite>
  </testsuites>
  <filter>
    <blacklist>
      <directory>vendor</directory>
    </blacklist>
  </filter>
</phpunit>
